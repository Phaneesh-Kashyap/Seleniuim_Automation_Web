package Programs;

import java.util.HashMap;

public class Number_to_Roman {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
				String val1 = "MCMXCIV";
				int val = Convert(val1);
				System.out.println(val);
			}

			public static int Convert(String num) {
				
				 HashMap<Character, Integer> map = new HashMap<>();
				 map.put('I', 1);
				 map.put('V', 5);
				 map.put('X', 10);
				 map.put('L', 50);
				 map.put('C', 100);
				 map.put('D', 500);
				 map.put('M', 1000);
				 
				 int val=0;
				
				 
				 for (int i = 0; i < num.length(); i++) 
			        {
					 
					 char ch_before = num.charAt(i);
					 char ch_after = num.charAt(i+1);
					 
					 int v_before  = map.get(ch_before);
					 int v_after  = map.get(ch_after);
					 
					 if (v_after > v_before)
					 {
						 val = val + v_after - v_before;
						 i++;
					 }
					 else
					 {
						 val = val + v_before;
					 }
			        }
				 
				return val;
				
		    }

}
